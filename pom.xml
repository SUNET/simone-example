                <version>3.0.2</version> <executions> <execution> <id>copy-resources</id>
                <phase>validate</phase> <goals> <goal>copy-resources</goal> </goals> <configuration>
                <outputDirectory>${basedir}/src/main/webapp/doc/</outputDirectory> <resources>
